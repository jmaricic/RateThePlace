<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/app_bar"
        android:id="@id/app_bar"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/app_bar"
       android:id="@id/successful_register_textView"
       android:text="You are Successfully registerd!"
       android:textSize="25sp"
       android:gravity="center"
       android:layout_margin="15dp"
       android:padding="15dp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/successful_register_textView"
        android:id="@id/successful_register_credentials_textView"
        android:text="Your credentials:"
        android:gravity="start"
        android:layout_margin="15dp"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/successful_register_linear_layout"
        android:layout_below="@id/successful_register_credentials_textView"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/successful_register_email_textView"
        android:text="Email: "
        android:layout_margin="15dp"
        android:padding="15dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/successful_register_your_email_textView"
        android:gravity="end"
        android:layout_margin="15dp"
        android:padding="15dp"
        />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/successful_register_relative_layout"
        android:layout_below="@id/successful_register_linear_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/successful_register_username_textView"
            android:text="Username: "
            android:layout_margin="15dp"
            android:padding="15dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/successful_register_username_textView"
            android:id="@id/successful_register_your_username_textView"
            android:gravity="end"
            android:layout_margin="15dp"
            android:padding="15dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/successful_register_relative_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:id="@id/successful_register_proceed_button"
        android:text="Proceed"/>


</RelativeLayout>